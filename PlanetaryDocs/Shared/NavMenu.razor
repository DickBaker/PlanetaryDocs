<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">🌎📃 Planetary Docs</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
    <br />
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <DisabledNavLink class="nav-link"
                             href="/View"
                             Match="NavLinkMatch.Prefix">
                <span class="oi oi-eye" aria-hidden="true"></span> View
            </DisabledNavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link"
                             href="/Add"
                             Match="NavLinkMatch.Prefix">
                <span class="oi oi-plus" aria-hidden="true"></span> Add New
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <DisabledNavLink class="nav-link"
                             href="/Edit"
                             Match="NavLinkMatch.Prefix">
                <span class="oi oi-pencil" aria-hidden="true"></span> Edit
            </DisabledNavLink>
        </li>
    </ul>
</div>

<div class="version">
    version: @version
</div>

@code {
    private bool collapseNavMenu = true;
    private string version = "?";

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override void OnInitialized()
    {
        if (version == "?")
        {
            version = System.Diagnostics.FileVersionInfo.GetVersionInfo(
                GetType().Assembly.Location).ProductVersion;
        }

        base.OnInitialized();
    }
}
